<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Help">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:padding="15dp"
        tools:ignore="UseSwitchCompatOrMaterialXml">

        <TextView
            android:id="@+id/faq"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/baseline_question_answer_24"
            android:text="FAQ" />

        <View
            android:id="@+id/breakLine1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#00000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/chat"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/baseline_chat_24"
            android:layout_marginTop="5dp"
            android:text="Chat with us" />


        <TextView
            android:id="@+id/history"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/baseline_history_24"
            android:text="History" />


        <TextView
            android:id="@+id/tc"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/baseline_rule_24"
            android:text= "Terms and Conditions" />

    </LinearLayout>

</RelativeLayout>
